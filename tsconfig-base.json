{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "paths": {
            "src": [
               "src"
            ],
            "commands": [
                "commands"
            ]
        },

        "target": "es2021",
        "module": "es2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    }
}
